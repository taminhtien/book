<div class="w-[24rem] mx-auto">
  <div class="px-6 py-4 bg-slate-800 bg-opacity-80 rounded">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, style: "display: block", class: 'text-white text-sm' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full' %>
      </div>

      <div class="mb-4">
        <%= f.label :password, style: "display: block", class: 'text-white text-sm' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'text-white text-sm' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'w-full btn-primary uppercase py-4 bg-slate-500 text-white' %>
      </div>
    <% end %>
  </div>
</div>
